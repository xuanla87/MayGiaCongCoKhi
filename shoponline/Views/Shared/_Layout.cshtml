    <script src="~/Content/OwlCarousel-master/owl-carousel/owl.carousel.min.js"></script>
    <script>
        $(document).ready(function () {
            var owl = $("#owl-demo");
            owl.owlCarousel({
                autoPlay: 3000,
                items: 4,
                itemsDesktop: [1199, 3],
