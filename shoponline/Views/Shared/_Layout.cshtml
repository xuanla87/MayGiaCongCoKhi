<body>
    <div class="header">
        <div class="container">
            <a href="/">
                <img src="~/Images/banner.jpg" alt="ieco vietnam" />
            </a>
        </div>
    </div>
    <div class="navbar nav-main ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse ">
                @Html.Action("ViewMain", "MenuView")
                <form action="/tim-kiem" method="get">
                    <div class="form-search">
                        <div class="input-group">
                            <input type="text" name="keyword" class="form-control" placeholder="Tìm kiếm sản phẩm...">
                            <span class="input-group-btn">
                                <button type="submit" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="col-md-12">
                @Html.Action("ViewProductFeature", "Home")
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="support-main">
                    @Html.Action("ViewSupport", "Home")
                </div>
            </div>
        </div>
        <div class="clearfix">
        </div>
        @RenderBody()
        <div class="clearfix">
        </div>
        <div class="row">
            <div class="col-md-12">
                <img src="~/Images/thanh-toan.jpg" alt="pay" />
            </div>
        </div>
        <div class="clearfix">
        </div>
    </div>
    <div class="footer-content">
        <div class="container">
            <div class="col-md-4">
                @Html.Action("Infor_Site", "Home")
            </div>
            <div class="col-md-8">
                <div class="col-md-4">
                    @Html.Action("ViewAbout", "MenuView")
                </div>
                <div class="col-md-4">
                    @Html.Action("ViewGiude", "MenuView")
                </div>
                <div class="col-md-4">
                    @Html.Action("ViewIncentive", "MenuView")
                </div>
            </div>

        </div>
    </div>
    <div class="footer-colophon">
        <div class="container">
            <p class="copyright">
                &copy; 2016 - IECO VIETNAM <span class="login">
                    <a href="/Administrators" target="_blank">Đăng nhập</a>
                </span>
            </p>

        </div>
    </div>
