                        s.parentNode.insertBefore(gcse, s);
                    })();
                </script>
                <gcse:search></gcse:search>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="support-main">
                    <ul class="nav">
                        <li>
                            <a href="ymsgr:sendim?lekhanh20387" title="Kinh doanh">
                                <img src="~/Images/yahoo.png" alt="yahoo" />
                            </a>
                            <a href="skype:lexuanit?chat" title="Kinh doanh">
                                <img src="~/Images/skypeimg.png" alt="skype" />
                            </a>
                            <div class="text">
                                <p>Hỗ trợ bán hàng</p>
                                <b>0946.236.687</b>
                            </div>
                        </li>
                        <li>
                            <a href="ymsgr:sendim?lekhanh20387" title="Kỹ thuật">
                                <img src="~/Images/yahoo.png" alt="yahoo" />
                            </a>
                            <a href="skype:lexuanit?chat" title="Kỹ thuật">
                                <img src="~/Images/skypeimg.png" alt="skype" />
                            </a>
                            <div class="text">
                                <p>Hỗ trợ kỹ thuật </p>
                                <b>0946.236.687</b>
                            </div>
                        </li>
                        <li>
                            <a href="ymsgr:sendim?lekhanh20387" title="Bảo hành">
                                <img src="~/Images/yahoo.png" alt="yahoo" />
                            </a>
                            <a href="skype:lexuanit?chat" title="Bảo hành">
                                <img src="~/Images/skypeimg.png" alt="skype" />
                            </a>
                            <div class="text">
                                <p>Hỗ trợ bảo hành </p>
                                <b>0946.236.687</b>
                            </div>
                        </li>
                    </ul>


                </div>
            </div>
        </div>
        <div class="clearfix">
        </div>
        @RenderBody()
        <div class="clearfix">
        </div>
        <div class="row">
            <div class="col-md-12">
                <img src="~/Images/thanh-toan.jpg" alt="pay" />
            </div>
        </div>
        <div class="clearfix">
        </div>
        <footer>
            <div class="row">
                <div class="col-md-3">
                    @Html.Action("ViewAbout", "MenuView")
                </div>
                <div class="col-md-3">
                    @Html.Action("ViewGiude", "MenuView")
                </div>
                <div class="col-md-3">
                    @Html.Action("ViewIncentive", "MenuView")
                </div>
                <div class="col-md-3">

                </div>
            </div>
            @*<hr />
                <p>&copy; 2015 - CAMERA MIỀN BẮC</p>*@
        </footer>
    </div>
    <div class="footer-content">
        <div class="container">
            <div class="col-md-4">
                @Html.Action("Infor_Site", "Home")
            </div>
            <div class="col-md-4">
                @Html.Action("Terms_Site", "Home")
            </div>
            <div class="col-md-4">
                @Html.Action("Customize_Site", "Home")
            </div>
        </div>
    </div>
    <div class="footer-colophon">
        <div class="container">
            <p class="copyright">&copy; 2015 - CAMERA MIỀN BẮC</p>
        </div>
    </div>
    <div class="follow-us">
        <a class="btn btn-social-icon btn-facebook">
            <i class="fa fa-facebook"></i>
        </a>
        <a class="btn btn-social-icon btn-google">
            <i class="fa fa-google-plus"></i>
        </a>
        <a class="btn btn-social-icon btn-twitter">
            <i class="fa fa-twitter"></i>
        </a>
    </div>
    <div id="form-contact">
        <div class="contact-header">
            <i class="fa fa-envelope-o"></i>
            Để lại tin nhắn cho chúng tôi
            <i class="fa fa-arrow-circle-up"></i>
        </div>
        <div class="contact-body">
            <div class="body-header">
                Để lại tin nhắn cho chúng tôi
                <i class="fa fa-minus"></i>
            </div>
            <div class="body-main">

                <div class="box-body">
                    <p>
                        Hiện nay chúng tôi không ở đây, xin vui lòng để lại lời nhắn.
                    </p>
                    <div class="form-group">
                        <input type="text" name="FullName" class="form-control" placeholder="Xin mời nhập Ho tên" />
                    </div>
                    <div class="form-group">
                        <input type="email" name="Email" class="form-control" placeholder="Email (để tôi liên hệ với bạn)" />
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="Content" placeholder="Hãy gửi tin nhắn cho chúng tôi về vấn đề về bạn:"></textarea>
                    </div>
                    <hr />
                    <div class="form-group">
                        <input type="submit" value="Gửi tin nhắn" class="btn btn-primary btn-block" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/shoponline-menu.js"></script>
    @RenderSection("scripts", required: false)
    @RenderSection("jsfooter", required: false)
</body>
</html>
