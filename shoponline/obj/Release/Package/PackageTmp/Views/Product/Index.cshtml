
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-4">
        @Html.Action("boxCategory")
    </div>
    <div class="col-md-8">
        @{
            string stAction = ViewBag.Action;
            switch (stAction)
            {
                case "AllProduct":
                    @Html.Action("AllProduct")
                    break;
                case "CategoryProduct":
                    @Html.Action("CategoryProduct")
                    break;
                case "DetailProduct":
                    @Html.Action("DetailProduct")
                    break;
                case "":
                    @Html.Action("AllProduct")
                    break;
                default:
                    @Html.Action("AllProduct")
                    break;
            }
        }
    </div>
</div>

