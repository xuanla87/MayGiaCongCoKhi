@model shoponline.Models.SettingsModel
@{
    ViewBag.Title = "Cài đặt";
    Layout = "~/Areas/Administrators/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/ckeditor/ckeditor.js"></script>
<script src="~/ckfinder/ckfinder.js"></script>
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Cài đặt
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Cài đặt</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">
        <!-- Left col -->
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">

                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Site_Title, htmlAttributes: new { @class = "control-label " })
                            @Html.EditorFor(model => model.Site_Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Site_Title, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Site_Keywords, htmlAttributes: new { @class = "control-label " })
                            @Html.EditorFor(model => model.Site_Keywords, new { htmlAttributes = new { @class = "form-control", @onchange = "javascript: Changed( this );" } })
                            @Html.ValidationMessageFor(model => model.Site_Keywords, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Site_Description, htmlAttributes: new { @class = "control-label " })
                            @Html.TextAreaFor(model => model.Site_Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Site_Description, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Infor_Site, htmlAttributes: new { @class = "control-label " })
                            @Html.TextAreaFor(model => model.Infor_Site, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Infor_Site, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Terms_Site, htmlAttributes: new { @class = "control-label " })
                            @Html.TextAreaFor(model => model.Terms_Site, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Terms_Site, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Customize_Site, htmlAttributes: new { @class = "control-label " })
                            @Html.TextAreaFor(model => model.Customize_Site, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Customize_Site, "", new { @class = "text-danger" })
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Main_Menu, htmlAttributes: new { @class = "control-label " })
                                    @Html.DropDownListFor(model => model.Main_Menu, null, "None", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Main_Menu, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Menu_01, htmlAttributes: new { @class = "control-label " })
                                    @Html.DropDownListFor(model => model.Menu_01, null, "None", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Menu_01, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Menu_02, htmlAttributes: new { @class = "control-label " })
                                    @Html.DropDownListFor(model => model.Menu_02, null, "None", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Menu_02, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Menu_03, htmlAttributes: new { @class = "control-label " })
                                    @Html.DropDownListFor(model => model.Menu_03, null, "None", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Menu_03, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Menu_04, htmlAttributes: new { @class = "control-label " })
                                    @Html.DropDownListFor(model => model.Menu_04, null, "None", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Menu_04, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Menu_05, htmlAttributes: new { @class = "control-label " })
                                    @Html.DropDownListFor(model => model.Menu_05, null, "None", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Menu_05, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                }
            </div>
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
<script>
    $(function () {
        CKEDITOR.replace('Customize_Site');
        CKEDITOR.replace('Terms_Site');
        CKEDITOR.replace('Infor_Site');
    });
</script>
<script>
    $(function () {
        $(".select-img").click(function () {
            var ckfiner = new CKFinder();
            ckfiner.selectActionFunction = function (fileUrl) {
                $("#Thumbnail").val(fileUrl);
            };
            ckfiner.popup();
        });
    });
</script>


