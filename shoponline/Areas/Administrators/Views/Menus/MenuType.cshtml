@model IEnumerable<ShopOnlineModel.EF.tb_MenuType>
@{
    ViewBag.Title = "Loại danh mục";
    Layout = "~/Areas/Administrators/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Content/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" />
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Loại danh mục
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li>Danh mục</li>
        <li class="active">loại danh mục</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>
                    @Html.ActionLink("Thêm loại danh mục", "AddMenuType")
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_length" id="example1_length">
                                   
                                </div>
                            </div><div class="col-sm-6">
                                <div id="example1_filter" class="dataTables_filter">
                                </div>
                            </div>
                        </div><div class="row">
                            <div class="col-sm-12">
                                <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                                    <thead>

                                        <tr role="row">
                                            <th class="" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 450px;">
                                                Tên
                                            </th>
                                            <th>
                                                Mô tả
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr role="row" class="odd">
                                                <td class="sorting_1">
                                                    @Html.ActionLink(item.Name, "EditMenuType", new { id = item.Id }, new { @title = "Sửa" })
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Description)
                                                </td>
                                                <td>
                                                    @using (Html.BeginForm("RemoveMenuType", "Menus", new { Id = item.Id }))
                                                    {
                                                        <button type="submit" class="btn btn-delete" onclick="return confirm('Bạn chắc chắn muốn xóa!')" title="Xóa">Xóa&nbsp;</button>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div><div class="row">
                            <div class="col-sm-5">
                                <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">

                                </div>
                            </div>
                            <div class="col-sm-7">
                                <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
